%{
#include <stdio.h>
#include <string.h>
int lines = 0;
%}

%option noyywrap
%option caseless

WORD		\'[0-9a-zA-Z]+\'
NUMBER		[+-]?[1-9][0-9]*|0$
CONST		{WORD}|{NUMBER}
ID 		[a-zA-Z][a-zA-Z0-9]*


%%

START {printf("Reserved word: %s\n", yytext);}
END	{printf( "Reserved word: %s\n", yytext);}
array_numbers	{printf( "Reserved word: %s\n", yytext);}
bigger_than	{printf( "Reserved word: %s\n", yytext);}
equals	{printf( "Reserved word: %s\n", yytext);}
